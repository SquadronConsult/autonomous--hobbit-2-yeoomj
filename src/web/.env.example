# Version: 1.0.0

# Application Configuration
# ------------------------
VITE_APP_NAME="Agricultural Management System"
VITE_APP_VERSION="1.0.0"

# API Configuration
# ----------------
# Base URL for backend API services
# Required: true
# Production: Use HTTPS
VITE_API_BASE_URL=http://localhost:3000

# API version for backend services
# Required: true
VITE_API_VERSION=v1

# WebSocket Configuration
# ----------------------
# WebSocket server URL for real-time communication
# Required: true
# Production: Use WSS
VITE_WS_URL=ws://localhost:3000

# WebSocket reconnection interval in milliseconds
# Required: true
# Validation: Must be > 1000
VITE_WS_RECONNECT_INTERVAL=5000

# Maximum WebSocket reconnection attempts
# Required: true
# Validation: Must be > 0
VITE_WS_MAX_RECONNECT_ATTEMPTS=5

# Authentication Configuration
# --------------------------
# Keycloak server URL
# Required: true
# Production: Use HTTPS
VITE_KEYCLOAK_URL=http://localhost:8080/auth

# Keycloak realm name
# Required: true
VITE_KEYCLOAK_REALM=agricultural-system

# Keycloak client ID
# Required: true
# Security: Keep client secret separate
VITE_KEYCLOAK_CLIENT_ID=web-client

# External Services
# ----------------
# MapBox API token for geospatial services
# Required: true
# Security: Restrict token to required services
VITE_MAPBOX_TOKEN=your_mapbox_token_here

# OpenWeatherMap API key for weather data
# Required: true
# Security: Restrict API key usage
VITE_WEATHER_API_KEY=your_weather_api_key_here

# Application Settings
# ------------------
# Application logging level
# Required: false
# Values: error, warn, info, debug
# Default: info
VITE_LOG_LEVEL=info

# Enable/disable application analytics
# Required: false
# Default: false
VITE_ENABLE_ANALYTICS=false

# Security Notice
# --------------
# 1. Use HTTPS/WSS in production environments
# 2. Restrict API keys and tokens to minimum required permissions
# 3. Keep sensitive credentials in secure key management systems
# 4. Regularly rotate API keys and tokens
# 5. Monitor usage patterns for security anomalies